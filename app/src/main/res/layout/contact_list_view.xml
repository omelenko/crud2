<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.omelenko.crud2.viewmodel.ListViewModel" />
        <variable
            name="contact"
            type="com.omelenko.crud2.contact.Contact" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/bgColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/bgColor">

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/contact_name"
                android:textColor="?attr/textColor"/>

            <TextView
                android:id="@+id/text_view_one"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="@{contact.name}"
                android:textColor="?attr/textColor"/>

            <TextView
                android:id="@+id/text_view_phone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/contact_phone"
                android:textColor="?attr/textColor"/>

            <TextView
                android:id="@+id/text_view_two"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="@{contact.phone}"
                android:textColor="?attr/textColor"/>

        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/bgColor">

            <Button
                android:id="@+id/edit_button"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:textColor="?attr/buttonTextColor"
                android:backgroundTint="?attr/buttonBgColor"
                android:onClick="@{() -> viewModel.editButton_onClick(viewModel.getContactId(contact))}"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/remove_button"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="@string/remove"
                android:textColor="?attr/buttonTextColor"
                android:backgroundTint="?attr/buttonBgColor"
                android:onClick="@{() -> viewModel.removeButton_onClick(viewModel.getContactId(contact))}"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</layout>
